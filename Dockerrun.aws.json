{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [ 
        {
            "name": "client",
            "image": "antonije1/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "antonije1/server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "antonije1/worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "antonije1/nginx",
            "essential": true,
            "portMappings": [
               {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}